# 核心镜像（必配）
registry=https://registry.npmmirror.com/

# 可选：依赖二进制包镜像（解决安装失败）
sass_binary_site=https://registry.npmmirror.com/-/binary/node-sass/
electron_mirror=https://registry.npmmirror.com/-/binary/electron/
phantomjs_cdnurl=https://registry.npmmirror.com/-/binary/phantomjs/
chromedriver_cdnurl=https://registry.npmmirror.com/-/binary/chromedriver/
operadriver_cdnurl=https://registry.npmmirror.com/-/binary/operadriver/
fse_binary_host_mirror=https://registry.npmmirror.com/-/binary/fsevents/
node_inspector_cdnurl=https://registry.npmmirror.com/-/binary/node-inspector/

# 可选：禁用严格 SSL（部分网络环境需要）
# strict-ssl=false

# 可选：设置缓存路径（避免C盘占用）
cache=D:\cache\npm-cache